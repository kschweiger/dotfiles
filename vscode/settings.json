{
    "workbench.editor.revealIfOpen": true,
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnType": true
    },
    "editor.smoothScrolling": true,
    "editor.minimap.autohide": true,
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "Catppuccin Mocha",
    "autoDocstring.docstringFormat": "sphinx-notypes",
    "files.associations": {
        "*.html": "jinja-html"
    },
    "files.autoSave": "afterDelay",
    "debug.allowBreakpointsEverywhere": true,
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "explorer.confirmDragAndDrop": false,
    "python.languageServer": "Pylance",
    "python.analysis.autoImportCompletions": true,
    "editor.semanticTokenColorCustomizations": {},
    "todo-tree.general.tags": [
        "TEMP",
        "TODO",
        "FIXME",
        "NOTE",
        "DONOTCOMMIT"
    ],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "checklist",
            "background": "SeaGreen",
            "foreground": "white",
            "gutterIcon": true,
            "iconColour": "SeaGreen"
        },
        "FIXME": {
            "background": "red",
            "iconColour": "red",
            "gutterIcon": true
        },
        "TEMP": {
            "icon": "clock",
            "background": "DodgerBlue",
            "foreground": "white",
            "gutterIcon": true,
            "iconColour": "DodgerBlue"
        },
        "NOTE": {
            "icon": "light-bulb",
            "background": "PeachPuff",
            "foreground": "black",
            "gutterIcon": true,
            "iconColour": "PeachPuff"
        },
        "DONOTCOMMIT": {
            "icon": "alert-fill",
            "background": "Crimson",
            "foreground": "white",
            "gutterIcon": true,
            "iconColour": "Crimson"
        }
    },
    "python.formatting.provider": "black",
    "python.analysis.indexing": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "jupyter.debugJustMyCode": false,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "explorer.confirmDelete": false,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportGeneralTypeIssues": "information",
        "reportPossiblyUnboundVariable": "error",
        "reportOptionalMemberAccess": "information",
        "reportAttributeAccessIssue": "information",
        "reportUnusedVariable": "none"
    },
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml",
        "editor.formatOnSave": true
    },
    "[yaml]": {
        //"editor.defaultFormatter": "",
        "editor.formatOnSave": true
    },
    "[json]": {
        //"editor.defaultFormatter": "",
        "editor.formatOnSave": true
    },
    "[lua]": {
        //"editor.defaultFormatter": "",
        "editor.formatOnSave": false
    },
    "[html]": {
        //"editor.defaultFormatter": "",
        "editor.suggest.insertMode": "replace",
        "editor.formatOnSave": false
    },
    "python.analysis.packageIndexDepths": [
        {
            "name": "gpxpy",
            "depth": 2,
            "includeAllSymbols": true
        },
        {
            "name": "sklearn",
            "depth": 2
        },
        {
            "name": "matplotlib",
            "depth": 2
        },
        {
            "name": "plotly",
            "depth": 3,
            "includeAllSymbols": true
        },
        {
            "name": "scipy",
            "depth": 2
        },
        {
            "name": "django",
            "depth": 2
        },
        {
            "name": "flask",
            "depth": 2
        },
        {
            "name": "fastapi",
            "depth": 2
        },
        {
            "name": "sqlalchemy",
            "depth": 3,
            "includeAllSymbols": true
        }
    ],
    "editor.mouseWheelZoom": true,
    "workbench.iconTheme": "catppuccin-mocha",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimInitVimPaths.linux": "~/dotfiles/vscode/init.vim",
    "vscode-neovim.neovimInitVimPaths.darwin": "~/dotfiles/vscode/init.vim",
    "vscode-neovim.logLevel": "info",
    "vscode-neovim.neovimClean": true,
    "git.autofetch": true,
    "githubIssues.useBranchForIssues": "off",
    "jupyter.askForKernelRestart": false,
    "luahelper.format.break_after_table_lb": true,
    "luahelper.format.chop_down_kv_table": false,
}